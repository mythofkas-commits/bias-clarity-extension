{
  "manifest_version": 3,
  "name": "Argument Clarifier",
  "version": "1.0.0",
  "description": "Reorganizes reasoning on the current page without truth verdicts",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "16": "public/icons/16.png",
      "32": "public/icons/32.png",
      "48": "public/icons/48.png",
      "128": "public/icons/128.png"
    },
    "default_title": "Argument Clarifier"
  },
  "side_panel": {
    "default_path": "src/panel.html"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "public/icons/16.png",
    "32": "public/icons/32.png",
    "48": "public/icons/48.png",
    "128": "public/icons/128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/heuristics/*.js",
        "src/contentScript.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
